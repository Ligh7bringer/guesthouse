<Window x:Class="assessment2_cs.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assessment2_cs"
        mc:Ignorable="d"
        Title="AddCustomerWindow" Height="400" Width="400">
    <Grid>
        <TextBox x:Name="txtbx_name" HorizontalAlignment="Left" Height="23" Margin="143,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
        <Label x:Name="label" Content="Customer name" HorizontalAlignment="Left" Margin="27,101,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtbx_address" HorizontalAlignment="Left" Height="23" Margin="143,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
        <Label x:Name="label_Copy" Content="Customer address" HorizontalAlignment="Left" Margin="27,132,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_save" Content="Save" HorizontalAlignment="Left" Margin="273,321,0,0" VerticalAlignment="Top" Width="75" Click="btn_save_Click"/>
        <Button x:Name="btn_exit" Content="Exit" HorizontalAlignment="Left" Margin="35,321,0,0" VerticalAlignment="Top" Width="75" Click="btn_exit_Click"/>

    </Grid>
</Window>

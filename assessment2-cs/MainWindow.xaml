        <Label x:Name="label_Copy1" Content="Invoices:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="127,429,0,0"/>
        <Button x:Name="btn_invoice" Content="Generate an invoice" HorizontalAlignment="Left" Margin="127,460,0,0" VerticalAlignment="Top" Width="111" Height="60" Click="btn_invoice_Click"/>
    </Grid>
</Window>
   